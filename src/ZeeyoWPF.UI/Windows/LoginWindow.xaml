<Window x:Class="ZeeyoWPF.UI.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeeyoWPF.UI.Windows" 
        mc:Ignorable="d"
        Title="LoginWindow" Height="550" Width="450">
    <Grid Background="Snow">
        <Border Width="300"
                Height="400"
                Background="Snow"
                CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                          Direction ="-90" 
                          RenderingBias ="Quality" 
                          ShadowDepth ="8" 
                          Color="Black"/>
            </Border.Effect>


            <StackPanel Orientation="Vertical"
                         Margin="20">


                <TextBlock Text="Login" 
                           FontSize="25"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Foreground="#3B82F6"
                           Padding="25"/>


                <!-- Phone Number TextBox with Placeholder -->
                <TextBox Width="250"
                     x:Name="phoneNumberTextBox"
                     Height="30" 
                     FontSize="14" 
                     materialDesign:HintAssist.Hint="Phone number" 
                     Padding="5"
                     Margin="0,10,0,0" 
                     />

                <!-- Password StackPanel -->
                <StackPanel Margin="0,10,0,0">
                    <!-- Password Box (initially hidden) -->
                    <PasswordBox x:Name="passwordBox"
                             Width="250" 
                             Height="30"
                             FontSize="14" 
                             materialDesign:HintAssist.Hint="Password" 
                             Padding="5"
                             Margin="0,5,0,0" />

                    <!-- Plain TextBox for password (initially hidden) -->
                    <TextBox x:Name="passwordTextBox"
                         Width="250" 
                         Height="30" 
                         FontSize="14" 
                         Padding="5" 
                         Visibility="Collapsed"
                         Margin="0,5,0,0" />

                    <!-- Show Password Checkbox -->
                    <CheckBox Content="Show password" 
                          Margin="0,10,0,0" 
                          Checked="ShowPassword_Checked"
                          Unchecked="ShowPassword_Unchecked" />
                </StackPanel>

                <Button
                    x:Name="forgerPasswordBtn"
                    Click="forgerPasswordBtn_Click"
                    Margin="150 0 0 0"
                    Foreground="#3B82F6"
                    Background="Transparent"
                    Content="Forget password?"
                    FontSize="12"
                    BorderBrush="Transparent"
                    Width="150"
                    Height="30"
                    Padding="5"
                    HorizontalAlignment="Center"/>

                    <Button
                    x:Name="enterBtn"
                    Content="Enter"
                    FontSize="14"
                    Foreground="White"
                    Background="#7757B9"
                    Margin="0,25 0 0"
                    Height="35"
                    Width="250"
                    Cursor="Hand"
                    Click="Button_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">

                                        <Border x:Name="LoginBorder" 
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />
                                        </Border>

                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseCaptured" Value="True">
                                                <Setter Property="Background" Value="#07AED8" 
                                                        TargetName="LoginBorder" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Button.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="Black" />
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
