<Window x:Class="ZeeyoWPF.UI.Windows.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Password" Height="500" Width="450"
        Background="Snow">
    <StackPanel Orientation="Vertical" Margin="30">
        <Button Width="40" Height="40"
                Background="Transparent"
                BorderBrush="Transparent"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="15, 5"
                Click="ReturnBackBtnClick">
            <materialDesign:PackIcon Kind="ArrowLeft"
                              Width="10" Height="10"
                              Foreground="#3B82F6"/>
        </Button>
        <TextBlock Text="Reset Password"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   Margin="0, 20, 0, 0"
                   FontWeight="Bold"
                   Foreground="#3B82F6"
                   Padding="15"/>

        <PasswordBox 
                    x:Name="newPasswordBox"
                    materialDesign:HintAssist.Hint="Create new password"
                    Width="300"
                    Height="35"     
                    FontSize="14" 
                    Padding="5"
                    Margin="0,40,0,0" />

        <PasswordBox 
                    x:Name="confirmPasswordBox"
                    materialDesign:HintAssist.Hint="Confirm your password"
                    Width="300"    
                    Padding="5"
                    Height="35" 
                    FontSize="14" 
                    Margin="0,20,0,0" />

        <Button Content="Change"
                x:Name="changeBtn"
                Width="250" 
                Height="35" 
                FontSize="14"
                Background="#3B82F6" Foreground="White"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignRaisedButton}" 
                Click="ChangeBtnClick"
                Margin="0,45,0,0" />
    </StackPanel>
</Window>
