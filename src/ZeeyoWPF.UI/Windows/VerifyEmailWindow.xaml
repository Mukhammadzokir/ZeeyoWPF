<Window x:Class="ZeeyoWPF.UI.Windows.VerifyEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Phone Verification"
        Height="500"
        Width="450">

    <Window.Resources>
         <!--Define a style for the TextBox with common properties--> 
        <Style x:Key="VerificationTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="40"/>
            <Setter Property="MaxLength" Value="1"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20" Background="{DynamicResource MaterialDesignBackground}">
        <Button Width="40" Height="40"
                Background="Transparent"
                BorderBrush="Transparent"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="15"
                Click="ReturnBackBtn_Click">
                <materialDesign:PackIcon Kind="ArrowLeft"
                             Width="10" Height="10"
                             Foreground="#3B82F6"/>
        </Button>

        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Margin="10">

        <TextBlock Text="Verify email address" FontSize="24" 
                    Foreground="#3B82F6"
                    HorizontalAlignment="Center"
                    Margin="0, 10, 0, 0"
                    Style="{StaticResource MaterialDesignTextBlock}" />

        <TextBlock Text="Enter the verification code that we sent to email"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,15"
                    TextWrapping="Wrap"
                    Style="{StaticResource MaterialDesignTextBlock}" />

        <StackPanel Orientation="Horizontal"
                    Width="240"
                    Height="50"
                    HorizontalAlignment="Center">
             <!--Creating input boxes for each digit--> 
        <TextBox x:Name="TextBox1" Style="{StaticResource VerificationTextBoxStyle}" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="TextBox2" Style="{StaticResource VerificationTextBoxStyle}" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="TextBox3" Style="{StaticResource VerificationTextBoxStyle}" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="TextBox4" Style="{StaticResource VerificationTextBoxStyle}" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="TextBox5" Style="{StaticResource VerificationTextBoxStyle}" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="TextBox6" Style="{StaticResource VerificationTextBoxStyle}" TextChanged="TextBox_TextChanged"/>
        </StackPanel>

        <Button Content="Verify"
                Click="VeriyfBtn_Click"
                Margin="0, 30, 0, 20"
                FontSize="14"
                Background="#3B82F6"
                Foreground="Snow"
                HorizontalAlignment="Center"
                Width="200" />

        <TextBlock Text="Didn't receive the code?" 
                    FontSize="14"
                    Margin="0, 10, 0, 0"
                    HorizontalAlignment="Center" />
            
        <Button Content="Resend"
                BorderBrush="Transparent"
                Background="Transparent"
                Click="ResendBtn_Click"
                FontSize="14"
                Margin="15"
                HorizontalAlignment="Center"
                Foreground="#3B82F6" />
        </StackPanel>
    </Grid>
</Window>